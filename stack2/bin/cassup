#!/bin/bash

# see stack1 version for comments
netup
docker stop cass2
docker rm cass2

docker run --name cass2 \
    -d \
    --net=vm-bridge \
    -p 7000:7000 \
    -p 7001:7001 \
    -p 7199:7199 \
    -p 9042:9042 \
    -p 9160:9160 \
    -v ~/cluster-test/stack2/cassandra/data:/var/lib/cassandra \
    -v ~/cluster-test/stack2/conf/etccassandra:/etc/cassandra \
    -v ~/cluster-test/stack2/cassandra/logs:/logs \
    -e CASSANDRA_BROADCAST_ADDRESS=192.168.2.202 \
    -e CASSANDRA_SEEDS=192.168.2.201 \
    cassandra:3.11
